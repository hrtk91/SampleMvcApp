@model SampleMvcApp.Models.Shop

@{
    ViewData["Title"] = "Edit";
    var Products = Model.Products;
}

<h1>Edit</h1>

<h4>Shop</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="ShopId" />
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Products</label>
                <div class="list-group">
@foreach (var product in Products)
{
                    <a class="list-group-item list-group-item-action" asp-controller="Product" asp-action="Details" asp-route-id="@product.ProductId">@product.Name</a>
}
                </div>
            </div>
            <div class="form-group">
                <a class="btn btn-info btn-sm" asp-action="AddProduct" asp-route-shopid="@Model.ShopId">Add Product</a>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

